{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["es6"],
    "outDir": "./build",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
